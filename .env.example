# Configuration AI4Local - Variables d'environnement

# =============================================================================
# BASE DE DONNÉES
# =============================================================================
DATABASE_URL=postgresql://postgres:ai4local_secure_password@localhost:5432/ai4local
POSTGRES_PASSWORD=ai4local_secure_password

# =============================================================================
# CACHE REDIS
# =============================================================================
REDIS_URL=redis://:ai4local_redis_password@localhost:6379
REDIS_PASSWORD=ai4local_redis_password

# =============================================================================
# SÉCURITÉ
# =============================================================================
SECRET_KEY=your_super_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_key_change_in_production

# =============================================================================
# SERVICES IA
# =============================================================================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
AI_SERVICE_URL=http://localhost:8000

# =============================================================================
# FRONTEND
# =============================================================================
REACT_APP_API_URL=http://localhost:5000
REACT_APP_AI_SERVICE_URL=http://localhost:8000

# =============================================================================
# PAIEMENTS MOBILES MADAGASCAR
# =============================================================================

# Mvola (Telma)
MVOLA_API_KEY=your_mvola_api_key
MVOLA_MERCHANT_ID=your_mvola_merchant_id
MVOLA_CALLBACK_URL=https://yourdomain.com/api/payments/mvola/callback
MVOLA_BASE_URL=https://api.mvola.mg

# Airtel Money
AIRTEL_API_KEY=your_airtel_api_key
AIRTEL_MERCHANT_ID=your_airtel_merchant_id
AIRTEL_CALLBACK_URL=https://yourdomain.com/api/payments/airtel/callback
AIRTEL_BASE_URL=https://api.airtel.mg

# Orange Money
ORANGE_API_KEY=your_orange_api_key
ORANGE_MERCHANT_ID=your_orange_merchant_id
ORANGE_CALLBACK_URL=https://yourdomain.com/api/payments/orange/callback
ORANGE_BASE_URL=https://api.orange.mg

# =============================================================================
# EMAIL / SMS
# =============================================================================

# Configuration SMTP pour emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@ai4local.mg
SMTP_FROM_NAME=AI4Local

# SMS Gateway (exemple avec Nexmo/Vonage)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+261340000000

# =============================================================================
# STOCKAGE FICHIERS
# =============================================================================

# Stockage local (développement)
UPLOAD_FOLDER=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB

# AWS S3 (production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ai4local-uploads
AWS_S3_REGION=eu-west-1

# =============================================================================
# MONITORING ET LOGS
# =============================================================================

# Sentry pour le tracking d'erreurs
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Grafana
GRAFANA_PASSWORD=admin_password_change_me

# =============================================================================
# ENVIRONNEMENT
# =============================================================================
FLASK_ENV=development
NODE_ENV=development
DEBUG=true

# =============================================================================
# DOMAINE ET SSL
# =============================================================================
DOMAIN_NAME=ai4local.mg
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# =============================================================================
# INTÉGRATIONS SOCIALES
# =============================================================================

# Facebook API (pour publication automatique)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# WhatsApp Business API
WHATSAPP_API_TOKEN=your_whatsapp_api_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# =============================================================================
# ANALYTICS
# =============================================================================

# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX

# Mixpanel
MIXPANEL_TOKEN=your_mixpanel_token

# =============================================================================
# BACKUP
# =============================================================================

# Configuration de sauvegarde automatique
BACKUP_SCHEDULE=0 2 * * *  # Tous les jours à 2h du matin
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=ai4local-backups

# =============================================================================
# RATE LIMITING
# =============================================================================

# Limites par minute
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# CACHE
# =============================================================================

# Durée de cache en secondes
CACHE_TIMEOUT=3600  # 1 heure
SESSION_TIMEOUT=86400  # 24 heures

